<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.fxproject.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button fx:id="helloButton" text="Say hello!" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#onButtonClick"/>
    <Button fx:id="byeButton" text="Say bye!" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#onButtonClick"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#handleKeyReleased"/>
</GridPane>
